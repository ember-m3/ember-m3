Name: {{model._internalModel.modelName}}<br>
Month: {{month-of model.dateAttr}}<br>

<button {{action "updateData" target=this.target}} class='update-data'> Update Data (via existing ED subsystem) </button>
<ul class='feed-updates'>
{{#each model.elements as |update|}}
  <li>
    {{update._internalModel.modelName}}
    <br>
    id: <span class='id'>{{update.id}}</span>
    <ul>
      <li>permalink: <span class='permalink'>{{update.permalink}}</span></li>
      <li>socialDetail: <span class='social-detail-id'>{{update.socialDetail.id}}</span></li>
      <li>socialDetail.totalSocialActivityCounts.numComments: {{update.socialDetail.totalSocialActivityCounts.numComments}}</li>
      <li>
        <ul class='comments'>
          {{#each update.socialDetail.comments.elements as |comment|}}
          <li>
            {{comment._internalModel.modelName}}: {{comment.id}}<br>
            {{#with comment.commenter.miniProfile as |commenter|}}
              {{commenter._internalModel.modelName}}: {{commenter.id}}<br>
              {{commenter.firstName}} {{commenter.lastName}}
              <em>({{commenter.occupation}})</em><br>
            {{/with}}
            <span class='comment-body'>
              {{#each comment.comment.values as |cfrag|}}
                {{cfrag.value}}
              {{/each}}
            </span>
          </li>
          {{/each}}
        </ul>
      </li>
      <li>
        {{update.value.$type}}#{{update.value.id}}<br>
        Actions:
        <ul>
          {{#each update.value.actions as |action|}}
            <li><button title={{action.subtext}}>{{action.value.$type}}:{{action.text}}</button></li>
          {{/each}}
        </ul>
      </li>
    </ul>
  </li>
{{/each}}
</ul>
{{outlet}}
